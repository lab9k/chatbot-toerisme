{
  "env": {
    "browser": false,
    "es6": true,
    "amd": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2015,
    "ecmaFeatures": {
      "spread": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["off", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": [
      "off",
      {
        "allow": ["warn", "error"]
      }
    ]
  },
  "globals": {
    "process": true,
    "module": true
  }
}
